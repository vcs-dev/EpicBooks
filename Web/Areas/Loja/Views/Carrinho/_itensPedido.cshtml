@model IEnumerable<Domain.Negocio.ItemPedido>
@if (Model != null)
{
    foreach (var item in Model)
    {
        <div class="row mr-0 ml-0 mb-2 border rounded-sm itemPedido">
            <div class="col-md-7">
                <a class="row mr-3 text-reset text-decoration-none" href="/Loja/Home/Produto/@item.Produto.Id">
                    <div class="col-md-2 mt-2 mb-2">
                        <img src="@item.Produto.CaminhoImagem" alt="..." title="@item.Produto.Nome" class="img-thumbnail">
                    </div>
                    <div class="col-md-8 align-self-center">
                        <h6>@item.Produto.Nome</h6>
                    </div>
                </a>
            </div>
            <div class="col-md-2 align-self-center text-center">
                <span>R$ 29,90</span>
            </div>
            <div class="col-md-2 align-self-center">
                <div class="row">
                    <div class="col-md-6 pl-0">
                        <input type="text" readonly class="form-control" id="inputQtde" value="@item.Qtde" maxlength="2">
                    </div>
                    <div class="col-md-3 pl-0">
                        <button type="button" class="btn btn-primary btnAumentarQtde" value="@item.Produto.Id"><i class="fa fa-plus"></i></button>
                    </div>
                    <div class="col-md-3 pl-1">
                        <button type="button" class="btn btn-primary btnDiminuirQtde" value="@item.Produto.Id"><i class="fa fa-minus"></i></button>
                    </div>
                </div>
            </div>
            <div class="col-md-1 align-self-center text-right">
                <button class="btn btn-secondary btnRemoverItem" value="@item.Produto.Id"><i class="fa fa-trash-alt"></i></button>
            </div>
        </div>
    }
}