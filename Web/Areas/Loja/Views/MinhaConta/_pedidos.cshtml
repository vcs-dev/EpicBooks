@model IEnumerable<Domain.Negocio.Pedido>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered text-center self-align-center">
        <thead>
            <tr>
                <th class="align-middle">Nº</th>
                <th class="align-middle">Data</th>
                <th class="align-middle">Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.DataCadastro</td>
                    <td>@item.DescricaoStatus</td>
                    <td><a href="/Loja/MinhaConta/Detalhes/@item.Id" class="btn btn-primary" title="Detalhes"><i class="fa fa-info-circle"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}