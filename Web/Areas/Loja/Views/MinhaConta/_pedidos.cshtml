@model IEnumerable<Domain.Negocio.Pedido>

@if (Model.Count() > 0)
{
    <table class="table table-striped text-center self-align-center">
        <thead>
            <tr>
                <th>Nº</th>
                <th>Data</th>
                <th>Status</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.DataCadastro</td>
                    <td>@item.DescricaoStatus</td>
                    <td><a href="/Loja/MinhaConta/Detalhes/@item.Id" class="btn btn-primary" title="Detalhes"><i class="fa fa-info-circle"></i></a></td>
                    @if (item.Status == 'E')
                    {
                        <td><a href="/Loja/MinhaConta/SolicitarTroca/@item.Id" class="btn btn-primary" title="Solicitar troca"><i class="fa fa-exchange-alt"></i></a></td>
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>
            }
        </tbody>
    </table>
}