@model IEnumerable<Domain.DadosCliente.CartaoDeCredito>

@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered text-center self-align-center">
        <thead>
            <tr>
                <th class="align-middle">Bandeira</th>
                <th class="align-middle">Apelido</th>
                <th class="align-middle">Nome Impresso</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Bandeira</td>
                <td>@item.Apelido</td>
                <td>@item.NomeImpresso</td>
                <td><a href="/Loja/MinhaConta/DetalhesCartao/@item.Id" class="btn btn-primary" title="Detalhes"><i class="fa fa-info-circle"></i></a></td>
                <td><a href="/Loja/MinhaConta/ExcluirCartao/@item.Id" class="btn btn-danger" title="Excluir"><i class="fa fa-trash"></i></a></td>
            </tr>
            }
        </tbody>
    </table>
}