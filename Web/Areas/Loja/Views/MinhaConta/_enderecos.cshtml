@model IEnumerable<Domain.DadosCliente.Endereco>

<a href="/Loja/MinhaConta/SalvarEndereco/" class="btn btn-primary mb-2 mt-2" id="btnExcluirEndereco">Adicionar endereço <i class="fa fa-plus"></i></a>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-bordered text-center self-align-center">
        <thead>
            <tr>
                <th class="align-middle">Tipo</th>
                <th class="align-middle">Logradouro</th>
                <th class="align-middle">Cep</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @if (item.TipoEndereco == 1)
                    {
                        <td>Entrega</td>
                    }
                    else
                    {
                        <td>Cobrança</td>
                    }
                    <td>@(item.Logradouro + ", " + item.Numero)</td>
                    <td>@item.Cep</td>
                    <td><a href="/Loja/MinhaConta/DetalhesEndereco/@item.Id" class="btn btn-primary" title="Detalhes"><i class="fa fa-info-circle"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Não há endereços cadastrados</p>
}

