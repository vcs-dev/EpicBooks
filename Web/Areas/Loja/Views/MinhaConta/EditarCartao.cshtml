@model Domain.DadosCliente.CartaoDeCredito
@{
    ViewData["Title"] = "Cartão - Editar";
}

<div class="container">
    <div class="row">
        <div class="col-md-3 pl-0">
            @await Html.PartialAsync("_menu")
        </div>
        <div class="col-md-9">
            <h4>Meus cartões de crédito</h4>
            <form action="/Loja/MinhaConta/EditarCartao/" method="post">
                @await Html.PartialAsync("_cartao", Model)
                <button type="submit" class="btn btn-success mb-2">Salvar</button>
            </form>
        </div>
    </div>
</div> <!-- /container -->
@await Html.PartialAsync("_modalMensagem")

@section Scripts{
    <script src="~/js/loja/minhaconta/detalhes-cartao.js"></script>
}
