@model IEnumerable<Domain.Negocio.Notificacao>
@{
    ViewData["Title"] = "Minha Conta";
}

<div class="container">
    <div class="row">
        <div class="col-md-3 pl-0">
            @await Html.PartialAsync("_menu")
        </div>
        <div class="col-md-9">
            <h1>Notificações</h1>
            @if (Model.Count() > 0)
            {
                foreach (var item in Model)
                {
                    <a href="">
                        <div class="row bg-light border border-success align-middle mb-2">
                            <div class="col-md-6"><label class="float-left mb-0">@item.Titulo</label></div>
                            <div class="col-md-6"><label class="float-right mb-0">@item.DataCadastro</label></div>
                        </div>
                    </a>
                }
            }
            else
            {
                <p>Você não possui notificações no momento.</p>
            }
        </div>
    </div>
</div> <!-- /container -->
