@model IEnumerable<Domain.Negocio.Cupom>
@{
    ViewData["Title"] = "Meus Cupons";
}

<div class="container">
    <div class="row">
        <div class="col-md-3 pl-0">
            @await Html.PartialAsync("_menu")
        </div>
        <div class="col-md-9">
            @if (Model.Count() > 0)
            {
                <table class="table table-striped table-bordered text-center self-align-center">
                    <thead>
                        <tr>
                            <th class="align-middle">Cupom</th>
                            <th class="align-middle">Valor</th>
                            <th class="align-middle">Usado</th>
                            <th class="align-middle">Expira em</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="align-middle">@item.Codigo</td>
                                <td class="align-middle">@("R$ " + item.Valor.ToString("##0.00"))</td>
                                <td class="align-middle">@(item.Usado == 1 ? "Sim" : "Não")</td>
                                @if (item.DataExpiracao != null)
                                {
                                    <td class="align-middle">@item.DataExpiracao</td>
                                }
                                else
                                {
                                    <td class="align-middle">Nunca</td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div> <!-- /container -->
@await Html.PartialAsync("_modalMensagem")

@section Scripts{
    <script src="~/js/loja/minhaconta/meus-cupons.js"></script>
}

