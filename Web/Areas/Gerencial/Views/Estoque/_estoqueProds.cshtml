@model IEnumerable<Domain.Negocio.Estoque>

@if (Model.Count() > 0)
{
    <table class="table table-striped text-center self-align-center">
        <thead>
            <tr>
                <th></th>
                <th class="align-middle">Cód. do Produto</th>
                <th class="align-middle">Título</th>
                <th class="align-middle">Quantidade</th>
                <th class="align-middle">Preço de Custo</th>
                <th class="align-middle">Observação</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle"><img src="@(item.CaminhoImagem)" width="50" height="70" alt="Capa" class="img-thumbnail" /></td>
                    <td class="align-middle">@item.ProdutoId</td>
                    <td class="align-middle">@item.NomeProduto</td>
                    <td class="align-middle">@item.Qtde</td>
                    <td class="align-middle">@("R$ " + item.ValorCusto.ToString("##0.00"))</td>
                    <td class="align-middle">@(item.Observacao != null ? item.Observacao : "")</td>
                    <td class="align-middle"><a href="/Gerencial/Estoque/DarEntrada/@item.ProdutoId" class="btn btn-success" title="Dar entrada em estoque"><i class="fa fa-layer-group"></i></a></td>
                </tr>
            }
        </tbody>
    </table>
}