@model Domain.Produto.Livro
@{
    ViewData["Title"] = "Edição de livro";
}

<div class="container">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        @if (ViewData["Title"].ToString().ToLower().Contains("cadastro"))
        {
            <h1 class="h2">Cadastro de livros</h1>
        }
        else if (ViewData["Title"].ToString().ToLower().Contains("detalhes"))
        {
            <h1 class="h2">Detalhes do livro</h1>
        }
        else
        {
            <h1 class="h2">Edição de livros</h1>
        }
    </div>
    <div class="row order-md-1 justify-content-center">
        <form action="/Gerencial/Produtos/Editar/" method="post" enctype="multipart/form-data">
            @Html.HiddenFor(x => x.Id)
            @Html.HiddenFor(x => x.CaminhoImagemBackup)
            @await Html.PartialAsync("_produto", Model)
        </form>
    </div>
</div>
@await Html.PartialAsync("_modalMensagem")
@section Scripts{
    <script src="~/js/gerencial/produto/produto.js"></script>
}
