@model IEnumerable<Domain.Produto.Livro>

<div class="row mt-3 mb-3">
    <div class="form-group col-10">
        <input type="text" class="form-control" id="consultar" value="Título">
    </div>
    <div class="col-2">
        <a href="" class="btn btn-primary" title="">Consultar</a>
    </div>
    <div class="col-12">
        <a href="/Gerencial/Produtos/Cadastrar" class="btn btn-primary" title="">Cadastrar livro <i class="fa fa-plus"></i></a>
    </div>
</div>
<table class="table table-striped text-center self-align-center">
    <thead>
        <tr>
            <th>Capa</th>
            <th>ISBN</th>
            <th>Título</th>
            <th>Status</th>
            <th>Lançamento</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td><img src="@(item.CaminhoImagem)" width="50" height="70" alt="Capa" class="img-thumbnail" /></td>
                    <td>@item.Isbn</td>
                    <td>@item.Nome</td>
                    <td>@(item.Status == 0 ? "Inativo" : "Ativo")</td>
                    <td>@item.AnoLancamento</td>
                    <td>
                        <a href="/Gerencial/Produtos/Detalhes/@item.Id" class="btn btn-primary" title="Detalhes">
                            <i class="fa fa-info-circle"></i>
                        </a>
                    </td>
                    <td><a href="/Gerencial/Produtos/Editar/@item.Id" class="btn btn-secondary" title="Editar"><i class="fa fa-edit"></i></a></td>
                    <td>
                        <a href="/Gerencial/Produtos/Inativar/@item.Id" class="btn btn-danger" title="Inativar"><i class="fa fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        }
    </tbody>
</table>