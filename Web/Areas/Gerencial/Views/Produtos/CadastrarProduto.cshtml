
@{
    ViewData["Title"] = "Cadastro de produto";
}

@section Styles{
    <link rel="stylesheet" href="css/form-validation.css">
}

@section Scripts{
    <script src="~/js/form-validation.js"></script>
}
<div class="container">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Cadastro de livros</h1>
    </div>
    <div class="row order-md-1 justify-content-center">
        <!-- <h4 class="mb-3">Billing address</h4> -->
        <form class="needs-validation" novalidate>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="firstName">Título</label>
                    <input type="text" class="form-control" id="firstName" placeholder="" value=""
                           required>
                    <div class="invalid-feedback">
                        Informe um título.
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="inputGroupFile01">Capa</label>
                    <div class="input-group mb-3">
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="inputGroupFile01"
                                   aria-describedby="inputGroupFileAddon01" required>
                            <label class="custom-file-label" for="inputGroupFile01"
                                   data-browse="Procurar">Escolha uma imagem</label>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="exampleFormControlSelect1">Categoria</label>
                    <select multiple class="form-control" id="exampleFormControlSelect1" required>
                        <option value="1">Desenvolvimento pessoal</option>
                        <option value="2">Ficção</option>
                        <option value="3">Romance</option>
                        <option value="4">História</option>
                        <option value="5">Terror</option>
                    </select>
                    <div class="invalid-feedback">
                        Informe pelo menos uma categoria.
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="exampleFormControlSelect1">Autor</label>
                    <select multiple class="form-control" id="exampleFormControlSelect1" required>
                        <option value="1">Dale Carnegie</option>
                        <option value="2">Jeff Sutherland</option>
                        <option value="3">J. R. R. Tolkien</option>
                        <option value="4">Idalberto Chiavenato</option>
                        <option value="5">Gabriel Torres</option>
                    </select>
                    <div class="invalid-feedback">
                        Informe pelo menos uma autor.
                    </div>
                </div>
                <div class="col-md-12 mb-3">
                    <label for="dtNasc">Sinopse</label>
                    <textarea name="" class="form-control" id="sinopse" cols="30" rows="6"
                              required></textarea>
                    <div class="invalid-feedback">
                        Informe a sinopse.
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <label for="exampleFormControlSelect1">Editora</label>
                    <select class="form-control" id="exampleFormControlSelect1" required>
                        <option></option>
                        <option value="1">Leya</option>
                        <option value="2">Abril</option>
                        <option value="3">Novo mundo</option>
                        <option value="4">Casa do código</option>
                        <option value="5">Objetiva</option>
                    </select>
                    <div class="invalid-feedback">
                        Informe uma editora.
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <label for="cpf">Ano de lançamento</label>
                    <input type="text" class="form-control" id="cpf" placeholder="aaaa" required>
                    <div class="invalid-feedback" style="width: 100%;">
                        Informe o ano de lançamento.
                    </div>
                </div>
                <div class="col-md-1 mb-3">
                    <label for="email">Edição</label>
                    <input type="email" class="form-control" id="email" placeholder="" required>
                    <div class="invalid-feedback">
                        Informe a edição.
                    </div>
                </div>
                <div class="col-md-1 mb-3">
                    <label for="email">Volume</label>
                    <input type="email" class="form-control" id="email" placeholder="">
                    <div class="invalid-feedback">
                        Informe o volume.
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <label for="tipoLogradouro">Tipo de capa</label>
                    <select class="custom-select d-block w-100" id="tipoLogradouro" required>
                        <option value="">Selecione</option>
                        <option>Mole</option>
                        <option>Dura</option>
                    </select>
                    <div class="invalid-feedback">
                        Informe o tipo de capa.
                    </div>
                </div>
                <div class="col-md-3 mb-3">
                    <label for="cpf">ISBN</label>
                    <input type="text" class="form-control" id="cpf" placeholder="" required>
                    <div class="invalid-feedback" style="width: 100%;">
                        Informe o ISBN.
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <label for="cpf">Qtde de páginas</label>
                    <input type="text" class="form-control" id="cpf" placeholder="" required>
                    <div class="invalid-feedback" style="width: 100%;">
                        Informe a quantidade de páginas.
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <label for="email">Altura</label>
                    <div class="input-group">
                        <input type="email" class="form-control" id="email" placeholder=""
                               aria-describedby="basic-addon2" required>
                        <div class="input-group-append">
                            <span class="input-group-text" id="basic-addon2">cm</span>
                        </div>
                    </div>
                    <div class="invalid-feedback">
                        Informe altura.
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <label for="email">Largura</label>
                    <div class="input-group">
                        <input type="email" class="form-control" id="email" placeholder=""
                               aria-describedby="basic-addon2" required>
                        <div class="input-group-append">
                            <span class="input-group-text" id="basic-addon2">cm</span>
                        </div>
                    </div>
                    <div class="invalid-feedback">
                        Informe a largura.
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <label for="email">Espessura</label>
                    <div class="input-group">
                        <input type="email" class="form-control" id="email" placeholder=""
                               aria-describedby="basic-addon2" required>
                        <div class="input-group-append">
                            <span class="input-group-text" id="basic-addon2">cm</span>
                        </div>
                    </div>
                    <div class="invalid-feedback">
                        Informe a espessura.
                    </div>
                </div>
                <div class="col-md-2 mb-3">
                    <label for="email">Peso</label>
                    <div class="input-group">
                        <input type="email" class="form-control" id="email" placeholder=""
                               aria-describedby="basic-addon2" required>
                        <div class="input-group-append">
                            <span class="input-group-text" id="basic-addon2">gr</span>
                        </div>
                    </div>
                    <div class="invalid-feedback">
                        Informe o peso.
                    </div>
                </div>
            </div>
            <hr class="mb-4">
            <button class="btn btn-primary btn-lg btn-block" type="submit">Cadastrar livro</button>
        </form>
    </div>
</div>

